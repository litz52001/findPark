<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/dialog_title_text"
            style="@style/text_m_com_style"
            android:text="时间设置"
            android:textColor="#6b6b6b" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_area"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/gd9d9d9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gd9d9d9" />

        <RelativeLayout
            android:id="@+id/starttime_row"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/text_s_com_style"
                android:layout_centerVertical="true"
                android:text="开始时间："
                android:textColor="@color/g7c7c7c" />

            <TextView
                android:id="@+id/startime_tv"
                style="@style/text_s_com_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2015-09-10 17：30：00"
                android:textColor="@color/g7c7c7c"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gd9d9d9" />

        <RelativeLayout
            android:id="@+id/endtime_row"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/text_s_com_style"
                android:layout_centerVertical="true"
                android:text="结束时间："
                android:textColor="@color/g7c7c7c" />

            <TextView
                android:id="@+id/endtime_tv"
                style="@style/text_s_com_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2015-09-10 17：30：00"
                android:textColor="@color/g7c7c7c"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gd9d9d9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/gd9d9d9" />
    </LinearLayout>

    <Button
        android:id="@+id/button_confirm"
        style="@style/btn_com_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="查询" />

</RelativeLayout>